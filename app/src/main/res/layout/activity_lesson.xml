<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/backgorund"
    tools:context=".LessonActivity" >

    <TextView
        android:id="@+id/texttitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lessons"
        android:textColor="#FBFBFB"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lesson Topic"
        android:textSize="24dp"
        android:textColorHint="#87CEEB"
        android:layout_marginTop="25dp"
        android:layout_below="@id/texttitle"
        android:textColor="#FFFFFF"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/prop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Things you want.?"
        android:textSize="24dp"
        android:textColorHint="#87CEEB"
        android:layout_marginTop="15dp"
        android:layout_below="@id/topic"
        android:textColor="#FFFFFF"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/descrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:textSize="24dp"
        android:textColorHint="#87CEEB"
        android:layout_marginTop="15dp"
        android:layout_below="@id/prop"
        android:textColor="#FFFFFF"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnInsert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Add New Lesson"
        android:layout_marginTop="40dp"
        android:layout_below="@id/descrip"
        android:background="#FF0000"/>

    <Button
        android:id="@+id/btnView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="View Lesson"
        android:layout_marginTop="20dp"
        android:layout_below="@id/btnInsert"
        android:background="#00FF00"/>


    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Lesson"
        android:textSize="24dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/btnView"
        android:background="#00FF00"/>

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Lesson"
        android:textSize="24dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/btnUpdate"
        android:background="#FF0000"/>

</RelativeLayout>